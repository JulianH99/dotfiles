zstyle ':fzf-tab:complete:z:*' fzf-preview 'ls --color=always -1 $realpath'
zstyle ':fzf-tab:complete:cat:*' fzf-preview 'cat -1 $realpath'
zstyle ':fzf-tab:complete:bat:*' fzf-preview 'bat --color=always --style=plain $realpath'

